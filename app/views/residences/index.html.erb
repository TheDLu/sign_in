<h1>Listing residences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Property Owner Email</th>
      <th>Residents</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @residences.each do |residence| %>
      <tr>
        <td><%= residence.name %></td>
        <td><%= residence.description %></td>
        <td><%= residence.user.email %></td>
        <td><%= residence.residents.count %></td>
        <td><%= link_to 'Show', residence %></td>
        <% if residence.user == current_user %>
          <td><%= link_to 'Edit', edit_residence_path(residence) %></td>
          <td><%= link_to 'Destroy', residence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Residence', new_residence_path %>
<% end %>

