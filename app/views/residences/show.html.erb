<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @residence.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @residence.description %>
</p>

<p>
	<strong>Residents List:</strong>
</p>
<table>
	<thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
    </tr>
 	</thead>
 	
	<tbody>
		<% if @residence.user == current_user %>
			<% @residence.residents.each do |resident| %>
		      <tr>
		        <td><%= resident.name %></td>
		        <td><%= resident.email %></td>
		        <td><%= resident.phone_number %></td>
		  <% end %>
		<% end %>
	</tbody>
</table>

<% if @residence.user == current_user %>
	<%= link_to 'Edit', edit_residence_path(@residence) %> |
<% end %>
<%= link_to 'Back', residences_path %>
